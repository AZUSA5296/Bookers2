<main>
  <div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	<h1>Editing Book</h1>

  	<%= form_for(@book, url: book_path(@book.id)) do |f| %>

  	  <div class="form-group">
      <label for="book_title">Title</label>
      <input class="form-control book_title" type="text" value="d" name="book[title]" id="book_title">
      </div>

      <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <textarea class="form-control book_body" name="book[body]" id="book_body">d</textarea>
      </div>

      <div class="form-group">
      <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
      </div>

      <nav>
      <%= f.submit 'Update Book',class: "col-xs-12 btn btn-primary" %>
      </nav>

　  <% end %>

　  <%= link_to "show",book_path(@book.id)%> | <%= link_to "Back",books_path %>

  </div>
  </div>
  </div>
</main>