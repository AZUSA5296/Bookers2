<h1>新規投稿</h1>
<%= form_with model:@book, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>

<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>タイトル：<%= book.title %></p>
  <p>説明：<%= body.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>