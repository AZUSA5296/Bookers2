<main>
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    </tr>
  </thead>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th colspan="2">
          <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(current_user)" href="/users/id/edit"></a>
        </th>
      </tr>
    </tbody>
  </table>
</main>