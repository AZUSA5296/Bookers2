<main>
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg"%>
    </tr>
  </thead>

  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th colspan="2">
        <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path(current_user)" do %>
        <% end %>
        </th>
      </tr>
    </tbody>
  </table>
</main>